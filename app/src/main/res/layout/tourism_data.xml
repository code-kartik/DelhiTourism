<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tourCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#242526"
    app:cardCornerRadius="10dp"
    android:outlineSpotShadowColor="@color/black"
    android:layout_margin="8dp">

    <LinearLayout
        android:id="@+id/ImageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#242526"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/placeimage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#242526"
        android:orientation="vertical"
        android:layout_marginStart="105dp"
        android:paddingTop="7dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_bold"
            android:text="Name"
            android:textColor="#B0B3B8"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/NearMetro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11sp"
            android:drawableLeft="@drawable/subway_drawable"
            android:fontFamily="@font/raleway"
            android:text="Nearest Metro Station"
            android:textColor="#B0B3B8"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/DistMetro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11sp"
            android:drawableLeft="@drawable/marker"
            android:fontFamily="@font/raleway"
            android:text="Distance from Metro Station"
            android:textAlignment="center"
            android:textColor="#B0B3B8"
            android:textSize="16sp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:background="#242526"
        android:layout_marginTop="95dp"
        android:paddingStart="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/detailsTourism"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Details"
            android:fontFamily="@font/raleway"
            android:textColor="#B0B3B8"
            android:textStyle="italic"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>